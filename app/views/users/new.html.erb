<h1>Create a new account</h1>

<%= form_with scope: :user, url: users_path, local: true do |form| %>
  <p>
    <%= form.label :email_address %><br>
    <%= form.text_field :email_address %>
  </p>
 
  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>
 
  <p>
    <%= form.submit 'Sign up' %>
  </p>
<% end %>