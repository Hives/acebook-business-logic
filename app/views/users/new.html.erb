<div id="single_form">
  <h1>Create a new account</h1>
  
  <%= form_for(:user, url: users_path, local: true) do |form| %>
    <p>
      <%= form.label :username %><br>
      <%= form.text_field :username %>
    </p>
    
    <p>
      <%= form.label :email_address %><br>
      <%= form.text_field :email_address, placeholder: "Prince@persia.com" %>
    </p>
  
    <p>
      <%= form.label :password %><br>
      <%= form.password_field :password, placeholder: 'Alakazam' %>
      <span class='password_requirements'>Passwords must be 6-10 characters long</span>
    </p>
  
    <p>
      <%= form.submit 'Sign up', class: "btn btn-primary" %>
    </p>
  <% end %>

  <p>
    Already signed up? <%= link_to "Click here to log in.", login_path %>
  </p>
</div>
