<h1>Posts page</h1>

<div class="new-post-button">
  <%= link_to new_post_path, class: "btn-add-delete" do %>
    Create new post
  <% end %>
</div>

<% @posts.each do |post| %>

  <div class='post-card'>
    <div class="post-header">
      <div class="post-author">
        <%= post.email %>
      </div>
      <div class="post-published-time">
        <%= post.created_at.strftime("%d-%m-%Y")%> at <%= post.created_at.strftime("%I:%M %p")%>
      </div>
    </div>
    <div class="post-content">
      <p><%= simple_format(post.message) %></p>
      <% if post.author_id == current_user.id %>
        <% if post.editable? %>
          <p><%= link_to 'Edit', edit_post_path(post) %></p> 
        <% end %>
        <p><%= link_to 'Remove', post, method: :delete, :data => { :confirm => "Are you sure you want to delete this message?" }, class: "btn-add-delete" %></p>
      <% end %>
    </div>
  </div>
<% end %>
