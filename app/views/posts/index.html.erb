<h1>Posts page</h1>
<%= link_to new_post_path do %>
  Create new post
<% end %>
<% @posts.each do |post| %>
  <p><%= post.message %></p>
  <p>Posted on <%= post.created_at.strftime("%Y-%m-%d")%> by <%= get_user_email(post) %></p>
  <% if post.user_id == current_user.id %>
    <p><%= link_to 'Edit', edit_post_path(post) %></p> 
  <% end %>
  <br>
<% end %>
<br>
