<h1>Posts page</h1>

<%= link_to new_post_path do %>
  New post
<% end %>

<% @posts.each do |post| %>

  <div class='post_card'>

    <div class="f-card">
      <div class="header">
        <div class="options"><i class="fa fa-chevron-down"></i></div>
        <%# <img class="co-logo" src="./app/assets/images/acebook.png"/> %>
        <div class="co-name"><a href="#">PureCSS</a></div>
        <%# <div class="time"><a href="#">2hrs</a> Â· <i class="fa fa-globe"></i></div> %>
      </div>
      <div class="content">
        <p><%= post.message %></p>
        <p>Posted on <%= post.created_at.strftime("%Y-%m-%d")%> by <%= get_user_email(post) %></p>
        <br>
      </div>

      <div class="social">
        <div class="social-content"></div>
        <div class="social-buttons">
          <%# <span><i class="fa fa-thumbs-up"></i>Like</span>
          <span><i class="fa fa-comment"></i>Comment</span>
          <span><i class="fa fa-share"></i>Share</span></div> %>
      </div>
    </div>

</div>
<% end %>
